.container
  .image_box{"ng-controller" => "productCtrl"}
    = image_tag "products/#{@product.image.split('/').last}"
  %p
    %strong
      Product Name:
    = @product.name
  %p
    %strong
      Quantity on hand:
    = @product.on_hand
  %p
    %strong
      Quantity available:
    = @product.available
  %p
    %strong
      Price:
    = number_to_currency @product.price
  %p
    %strong
      Description:
    = @product.description
%br
%br
.bottom_links
  = link_to 'Back', products_path