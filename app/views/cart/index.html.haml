.container
  %H3 Your current cart:
  .cart_item{"ng-controller" => "cartCtrl"}
    %table.col-sm-12
      %tr.col-headers
        %th.item
          Item
        %th.quantity
          Update
        %th.quantity
          Quantity
        %th.price
          Item Price
        %th.price
          Price


      %tr{"ng-repeat" => "item in cart.order_items", "ng-controller" => "itemCtrl"}
        %td.item
          {{item.source.name}}
        %td.quantity
          .form-group
            %select.form-control{"ng-model" => "item.quantity", "ng-change" => "add_product(item)"}
              %option.qty{"ng-repeat" => "number in selectOp() track by $index", "ng-value" => "{{number}}"}
                {{number}}
        %td.quantity
          {{item.quantity}}
        %td.price
          {{item.source.price | currency}}
        %td.price
          {{(item.source.price)*(item.quantity) | currency}}
      %tr
        %td.item.total
          Total:
        %td.quantity
          .update
        %td.quantity.total
          {{cart.product_count}}
        %td.price.total
        %td.price.total
          {{total() | currency}}

      //number_to_currency cart.order_items.to_a.sum{|x| x.price*x.quantity}

  %br
  %br
  .checkout-link
    = link_to 'Checkout', cart_address_path
    |
    = link_to 'Empty Cart', cart_destroy_path, method: :post

  .bottom_links
    =link_to 'Home', root_path
    |
    =link_to 'Products', products_path